<h1>Listing Guests</h1><br>
<tr>
 <%= form_for :agent, :url => { :action => "guest_lists" } do |f| %>
    <td><label for="from_filter">From:</label></td>
    <td><div id="datepicker"><%= f.text_field 'from_date' %></div></td>
     <td><label for="to_filter">To:</label></td>
    <td><div id="datepicker"><%= f.text_field 'to_date' %></div></td>
    <td><%= f.submit 'Find Guests' %></td>
    <!--<td><a href="/guest/list"><img src="/images/go.jpg"></a></td>-->
  <% end %>
</tr>
<tr>
   
</tr>
<% if @guests != nil %>
<table style="background-color:#DFDBDC;" width="100%">
<!-- row 0   -->
 <tr>
	<th >Guest name</th>
	<th >Agent</th>
	<th >Arrival From</th>
	<th >Airlines</th>
	<th >Arr Date Time</th>
	<th >No.Of.Pax</th>
	<th ></th>
	<th ></th>
</tr> 
<!-- row 1   -->
<% @guests.each do |guest| %>
 <tr>
    <td ><%= link_to guest.guest_name, guest  %></td>
    <td ><%= guest.agent.agent_name %></td>
    <td ><%= guest.arrival_from %></td>
    <td ><%= guest.airlines %></td>
    <td ><%= guest.arr_time.strftime("%m/%d/%Y - %H:%M")  %></td>
    <td ><%= guest.number_of_pax %></td>
    <td ><%= link_to 'Edt', edit_guest_path(guest) %></td>
    <td ><%= link_to 'Del', guest, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<!-- end rows -->
</table>
<% end %>
